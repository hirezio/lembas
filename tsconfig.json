{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true, // generate .d.ts files
    "declarationMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["es2015", "es2016"],
    "pretty": true,
    "strict": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "node_modules/@hirez_io"],
    "types": ["jest", "node", "@hirez_io/jest-single"]
  },
  "include": ["src"]
}
